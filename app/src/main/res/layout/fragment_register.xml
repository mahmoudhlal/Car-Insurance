        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/input_layout_bio"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxStrokeWidth="2dp"

            android:textColorHint="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:id="@+id/input_bio"
                android:drawableStart="@drawable/ic_user"
                android:layout_width="match_parent"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textAlignment="viewStart"
                android:hint="@string/bio" />

        </com.google.android.material.textfield.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/input_layout_county"
                app:boxCornerRadiusBottomEnd="25dp"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="2dp"
                android:clickable="true"
                android:textColorHint="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:id="@+id/input_country"
                    android:drawableStart="@drawable/ic_user"
                    android:layout_width="match_parent"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:enabled="false"
                    android:textAlignment="viewStart"
                    android:hint="@string/country" />

            </com.google.android.material.textfield.TextInputLayout>

                <RelativeLayout
                    android:elevation="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/relAddress"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>


            <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginTop="1dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxStrokeWidth="2dp"
            app:passwordToggleEnabled="true"
            android:textColorHint="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGray"
                android:id="@+id/input_password"
                android:drawableStart="@drawable/ic_lock"
                android:layout_width="match_parent"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textAlignment="viewStart"

                android:hint="@string/password" />

        </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/input_layout_company"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shape_border"
                >

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_height="match_parent"
                    android:id="@+id/countrySpinner"
                    />

               <!-- <com.google.android.material.textfield.TextInputEditText
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:id="@+id/input_company"
                    android:drawableStart="@drawable/ic_user"
                    android:layout_width="match_parent"
                    android:drawablePadding="5dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textAlignment="viewStart"
                    android:hint="@string/company" />-->

            </RelativeLayout>



            <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/register"
            android:background="@drawable/main_btn_shape"
            />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="@string/or"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:padding="8dp"
            android:id="@+id/txtLogin"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/login"
            />

    </LinearLayout>


    </ScrollView>

</LinearLayout>